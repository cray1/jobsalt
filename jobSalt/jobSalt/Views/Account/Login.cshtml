@model jobSalt.Models.Auth.LoginModel

<div class="container-fluid header">
    <div class="container">
        <div class="university-logo pull-left"></div><h1>Log In</h1>
    </div>
    <div class="header-input"></div>
</div>
<div class="container">
    <div class="col-xs-offset-3 col-xs-6" style="margin-top: 25px; margin-bottom: 25px">
        <div class="post">
            <h2 class="center">Log In</h2>
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="row" style="margin-bottom: 10px; margin-top: 25px;">
                    <div class="col-xs-3">
                        @Html.LabelFor(m => m.UserName)
                    </div>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="row" style="margin-bottom: 10px;">
                    <div class="col-xs-3">
                        @Html.LabelFor(m => m.Password)
                    </div>
                    <div class="col-xs-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-offset-3 col-xs-8">
                        <input type="submit" value="Log In" style="width: 100%;" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>