@model jobSalt.Models.Field

@using jobSalt.Models;

@switch (@Model)
{
    case Field.Date:
        <div>
            <div id="datetimepicker" class="input-append date">
              <input type="text" />
              <span class="add-on">
                <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
              </span>
            </div>
        </div>
        <script type="text/javascript">
            $('#datetimepicker').datetimepicker({
                format: 'dd/MM/yyyy hh:mm:ss',
                language: 'pt-BR'
            });

            function SubmitFilter() {
                alert("date");
            }
        </script>
        break;
    default:
            <input id="value" class="form-control col-lg-4" name="value" style="height:30px; width:200px" type="text" value="@FilterUtility.GetFilterValue(@Model, ViewBag.FilterString)">
            <script type="text/javascript">
                function SubmitFilter() {
                    window.location = "/FilterUtility/AssignFilter?targetField=" + "@Model" + "&filterString="+ "@ViewBag.FilterString" + "&value=" + $('#value').val();
                }
            </script>
        break;
}