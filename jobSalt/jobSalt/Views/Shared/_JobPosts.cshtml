@model MVC_Prototype.Models.IndeedJobPost[]

@for (int i = 0; i < Model.Count(); i++)
{
    <div class="container" data-toggle="collapse" data-target="#collapsable@(i)">
        <div class="well">
            <h2>@Model[i].Company</h2>
            <h3>@Model[i].JobTitle</h3>
            <div id="collapsable@(i)" class="collapse">
                <p>@Html.Raw(Model[i].Snippet)</p>
                <b>Location:</b> @Model[i].FormattedLocationFull<br />
                <b>Posted On:</b> @Model[i].Date.ToShortDateString()<br />
                <br />
                <a href="@Model[i].URL" class="btn btn-primary btn-large" target="_blank">View Source</a>
            </div>
        </div>
    </div>
}